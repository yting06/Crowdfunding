@model CrowdfundingWebsites.Models.ViewModels.FAQVm


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "faqFormId" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CategoryId)

        <div class="row mb-3">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "col-form-label col-md-2 text-end" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "col-form-label col-md-2 text-end" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Question, new { @class = "form-control", @rows = 3, style = "resize: none;" })
                @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "col-form-label col-md-2 text-end" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Answer, new { @class = "form-control", @rows = 5, style = "resize: none;" })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "col-form-label col-md-2 text-end" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
}

@model CrowdfundingWebsites.Models.ViewModels.CompanyRegisterVm

@{

    string WebName = "註冊";
    string WebsiteName = "註冊團隊會員";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@WebName</title>
    @Styles.Render("~/font/css")
    @Styles.Render("~/lib/css")
    @Styles.Render("~/Content/css")
</head>
<body>

    @using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@
        @*@Html.HiddenFor(model => model.Introduce)
        @Html.HiddenFor(model => model.Image)*@
        <div class="form-horizontal">
            <!-- Sign In Start -->
            <div class="container-fluid">
                <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                        <div class="bs-c-secondary rounded p-4 p-sm-5 my-4 mx-3">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div>
                                    <h3 class="bs-font-primary" style="color: #F0997D !important ">
                                        <i class="fa fa-user-edit me-2"></i>@WebsiteName
                                    </h3>
                                </div>
                            </div>
                            <div class="form-floating mb-3">

                                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "搜尋" } })
                                <label for="floatingInput">帳號</label>
                                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-floating mb-4">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "floatingPassword", placeholder = "密碼" })
                                <label for="floatingPassword">密碼</label>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", id = "floatingPassword", placeholder = "確認密碼" })
                                <label for="floatingPassword">確認密碼</label>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "Email" } })
                                <label for="floatingPassword">Email</label>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "團隊名稱" } })
                                <label for="floatingPassword">團隊名稱</label>
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "聯絡電話" } })
                                <label for="floatingPassword">聯絡電話</label>
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.EditorFor(model => model.UnifiedBusinessNo, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "統一編號" } })
                                <label for="floatingPassword">統一編號</label>
                                @Html.ValidationMessageFor(model => model.UnifiedBusinessNo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.EditorFor(model => model.ResponsiblePerson, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "團隊負責人" } })
                                <label for="floatingPassword">團隊負責人</label>
                                @Html.ValidationMessageFor(model => model.ResponsiblePerson, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-floating mb-4">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">註冊</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sign In End -->
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/lib/javascript")
    @Scripts.Render("~/javascript/init")

</body>
</html>


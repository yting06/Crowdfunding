@model CrowdfundingWebsites.Models.ViewModels.ResetCompanyPasswordVM

@{
    string WebName = "重設密碼";
    string WebsiteName = "重設密碼";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@WebName</title>
    @Styles.Render("~/font/css")
    @Styles.Render("~/lib/css")
    @Styles.Render("~/Content/css")
</head>

<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid position-relative d-flex p-0">
            @Html.Hidden("confirmCode", new { confirmCode = @ViewBag.confirmCode } )
            <!-- Sign In Start -->
            <div class="container-fluid">
                <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                        <div class="bs-c-secondary rounded p-4 p-sm-5 my-4 mx-3" style="background-color: gray !important;">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div>
                                    <h3 class="bs-font-primary " style="color:white !important"><i class="fa fa-user-edit me-2"></i>@WebsiteName</h3>
                                </div>
                            </div>
                            <div class="form-floating mb-3">

                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "floatingInput", placeholder = "密碼" } })
                                <label for="floatingInput">新密碼</label>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-floating mb-4">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", id = "floatingEmail", placeholder = "確認密碼" } })
                                <label for="floatingPassword">請確認新密碼</label>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">送出</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sign In End -->
        </div>

    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/lib/javascript")
    @Scripts.Render("~/javascript/init")
</body>
</html>


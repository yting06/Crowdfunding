@model CrowdfundingWebsites.Models.ViewModels.ProductVm

@{
    ViewBag.Title = "編輯商品";
}

<h2>編輯商品</h2>


@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Image)
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ProjectId)

    <div class="mb-3">
        @Html.LabelFor(model => model.ProjectId, "專案名稱", htmlAttributes: new { @class = "form-label col-md-2" })
        @*@Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-select", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })*@
        @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "form-label col-md-2" })

        @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })

    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Qty, htmlAttributes: new { @class = "form-label col-md-2" })

        @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })

    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label col-md-2" })

        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

    </div>

    <div class="mb-3">
        <div class="text-end">
            <input type="submit" value="儲存" class="btn btn-primary" />
            @Html.ActionLink("回到商品列表", "Index", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model CrowdfundingWebsites.Models.ViewModels.ProductVm

@{
    ViewBag.Title = "新增商品";

}

<h2>新增商品</h2>


@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3">
        @Html.LabelFor(model => model.ProjectId, "專案名稱", htmlAttributes: new { @class = "form-label col-md-2" })
        @if (ViewBag.SelectProjectId == null)
        {
            @Html.DropDownList("ProjectId", null, "-- 請選擇 --", htmlAttributes: new { @class = "form-select" })
        }
        else
        {
            <input class="form-control text-box single-line" data-val="true" id="ProjectId" name="ProjectId" readonly="readonly" type="hidden" value="@ViewBag.SelectProjectId">
            <input class="form-control text-box single-line" readonly="readonly" type="text" value="@ViewBag.DisplayProjectName">
        }
        @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
    </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })

        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Qty, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })

        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label col-md-2" })

            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">圖片</label>
            <input class="form-control" type="file" name="myfile" id="myfile">
            @*<span class="field-validation-valid text-danger" data-valmsg-for="myfile" data-valmsg-replace="true"></span>*@
            @Html.ValidationMessage("myfile", "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <div class="text-end">
                <input type="submit" value="新增" class="btn btn-primary" />
                @Html.ActionLink("回到商品列表", "Index", null, new { @class = "btn btn-success" })
                <i> </i>
                <a href="~/Projects/Index" class="btn btn-success "> 回到專案列表</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
